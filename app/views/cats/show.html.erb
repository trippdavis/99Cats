<table>
  <tr>
    <td>Name:</td>
    <td><%= @cat.name %></td>
  </tr>
  <tr>
    <td>Age:</td>
    <td><%= @cat.age %></td>
  </tr>
  <tr>
    <td>Color:</td>
    <td><%= @cat.color %></td>
  </tr>
  <tr>
    <td>Gender:</td>
    <td><%= @cat.gender %></td>
  </tr>
  <tr>
    <td>Description:</td>
    <td><%= @cat.description %></td>
  </tr>
</table>

<p>
  <h4>Requests for <%= @cat.name %>:</h4>
  <ul>
    <%  @cat.sorted_requests.each do |request| %>
      <li> <%= request.start_date %> : <%= request.end_date %> </li>
    <% end %>
  </ul>
</p>
